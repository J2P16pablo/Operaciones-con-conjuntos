package mvc_produto_simetrico;

import mvc_produto_simetrico.modelo_producto_simetrico;
import mvc_produto_simetrico.vista_producto_simetrico;
import java.util.Set;

public class controlador_producto_simetrico{
    private modelo_producto_simetrico modelo;
    private vista_producto_simetrico vista;

    public controlador_producto_simetrico(modelo_producto_simetrico modelo, vista_producto_simetrico vista) {
        this.modelo = modelo;
        this.vista = vista;
    }

    public void ejecutarOperacion() {
        Set<Integer> conjuntoA = vista.pedirConjunto("Conjunto A");
        Set<Integer> conjuntoB = vista.pedirConjunto("Conjunto B");

        modelo.setConjuntoA(conjuntoA);
        modelo.setConjuntoB(conjuntoB);

        vista.mostrarConjuntos(modelo.getConjuntoA(), modelo.getConjuntoB());

        Set<Integer> resultado = modelo.calcularProductoSimetrico();
        vista.mostrarResultado(resultado, "Producto Simétrico (A Δ B) o (A u B) - (A n B)");

    }
}
