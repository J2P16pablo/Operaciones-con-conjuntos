package mvc_produto_simetrico;
import java.util.*;

public class modelo_producto_simetrico {
    private Set<Integer> conjuntoA;
    private Set<Integer> conjuntoB;

    public modelo_producto_simetrico() {
        conjuntoA = new HashSet<>();
        conjuntoB = new HashSet<>();
    }

    public void setConjuntoA(Set<Integer> conjuntoA) {
        this.conjuntoA = conjuntoA;
    }

    public void setConjuntoB(Set<Integer> conjuntoB) {
        this.conjuntoB = conjuntoB;
    }

    public Set<Integer> calcularProductoSimetrico() {
        Set<Integer> resultado = new HashSet<>(conjuntoA);
        resultado.addAll(conjuntoB); 

        Set<Integer> interseccion = new HashSet<>(conjuntoA);
        interseccion.retainAll(conjuntoB); 

        resultado.removeAll(interseccion); 
        return resultado;
    }

    public Set<Integer> getConjuntoA() {
        return new HashSet<>(conjuntoA);
    }

    public Set<Integer> getConjuntoB() {
        return new HashSet<>(conjuntoB);
    }
}


